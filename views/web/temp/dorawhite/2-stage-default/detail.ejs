          <div class="title ft-140">
              同类推荐
          </div>
          <div class="pubu">
            <%if(reCommendListData.length>0){%>
              <ul class="pubu-wrap clearfix js-pubu">
                <%reCommendListData.forEach(function(item){%>
                  <li class="waterfall-item">
                    <div class="pubu-img-box">
                      <a href="/details/<%=item._id%>.html" class="pubu-img">
                        <img src="<%=item.sImg%>"/>
                      </a>
                      <p class="pubu-num">
                        <span><i class="ar ar-tag"></i> <%=item.category.name%></span>
                        <a href="javascript:;" class="watch-num"><i class="ar ar-preview"></i> <%=item.clickNum%></a>
                        <a href="javascript:;" class="like-num"><i class="ar ar-heart"></i> <%=item.likeNum%></a>
                      </p>
